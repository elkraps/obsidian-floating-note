{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./",
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}